.NcoNotifier
    position absolute
    top 0
    left 0
    z-index 10

    width 100%
    height 0
    overflow visible

    &_item
        //animation-name NcoNotifierSlidein
        animation NcoNotifierSlidein .2s ease-out

        padding 8px 16px

        color black
        background rgba(#fff, .9)
        transform-origin top right
        // background rgba($color_accent, .8)

        &.warn
            color #fff
            background hsla(0, 80%, 70%, .9)

        &.info
            color #fff
            background hsla(200, 80%, 80%, .9)
