.NcoControl
    position relative

    &_mylist
    &_request
        position relative
        height 0
        overflow visible

    &_actions
        width 100%
        height 32px
        padding 0 8px

        background-color $color_main
        //border-bottom 1px solid #ddd

        user-select none

        &_btn
            width 40px
            height 32px

            vertical-align bottom

            //background-color rgba(#eee, .5)
            background-color transparent
            color white
            border none
            outline none

            transition-property color, background-color
            transition .15s ease-out

            &.skip:hover
                background-color $cmd_skip

            &.good:hover
            &.mylist:hover
            &.request:hover
                background-color $cmd_default

            &.reload
                background-color $cmd_reload

    &_comment
        position relative
        width 100%
        height 40px
        padding 4px

        background-color $color_main

        &.focused
            &_opt
                display inline-block

        $_contentHeight = (@height - 8px)

        &_opt
            position absolute
            bottom 100%

            display none
            width 100%
            height 32px
            padding 8px 0
            overflow hidden

            font-size $fsz_sm

            background-color #0dccf2

            &_184
                line-height 1

        &.focus &_opt
            display block

        &_input
            display block
            width 100%
            height $_contentHeight
            padding 6px 4px

            border none
            border-radius 2px 4px 4px 2px
            background-color rgba(lighten($color_main, 20%), .8)

            transition-property background-color
            transition-duration .2s

            font-size $fsz_sm
            font-family "mplus-2p"
            // line-height 32px

            resize none
            outline none

            &::-webkit-input-placeholder
                color rgba(85, 85, 85, .5)
                //color rgba(223, 223, 223, 0.5)

        &.focus &_input
            background-color white
